@page
@model IndexModel
@{
    ViewData["Title"] = "用户管理";
}

<h2>用户管理</h2>

<div class="row mb-3">
    <div class="col-md-12">
        <a asp-page="./Create" class="btn btn-primary">创建新用户</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>用户名</th>
                    <th>邮箱</th>
                    <th>姓名</th>
                    <th>激活状态</th>
                    <th>邮箱确认</th>
                    <th>创建日期</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@(string.IsNullOrEmpty(user.FirstName) ? "" : user.FirstName) @(string.IsNullOrEmpty(user.LastName) ? "" : user.LastName)</td>
                        <td>@(user.IsActive ? "是" : "否")</td>
                        <td>@(user.IsEmailConfirmed ? "是" : "否")</td>
                        <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">编辑</a>
                            <a asp-page="./Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">详情</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions{
    public class IndexModel : Microsoft.AspNetCore.Mvc.RazorPages.PageModel
    {
        private readonly SSOAuthCenter.Services.Interfaces.IAuthService _authService;

        public IndexModel(SSOAuthCenter.Services.Interfaces.IAuthService authService)
        {
            _authService = authService;
        }

        public IEnumerable<SSOAuthCenter.Models.User> Users { get; set; } = new List<SSOAuthCenter.Models.User>();

        public async Task OnGetAsync()
        {
            Users = await _authService.GetAllUsersAsync();
        }
    }
}