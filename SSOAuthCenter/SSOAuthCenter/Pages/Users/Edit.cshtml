@page
@model EditModel
@{
    ViewData["Title"] = "编辑用户";
}

<h2>编辑用户</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Input.Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Input.Username" class="control-label">用户名</label>
                <input asp-for="Input.Username" class="form-control" readonly />
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Input.Email" class="control-label">邮箱</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Input.FirstName" class="control-label">名字</label>
                <input asp-for="Input.FirstName" class="form-control" />
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Input.LastName" class="control-label">姓氏</label>
                <input asp-for="Input.LastName" class="form-control" />
            </div>
            
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.IsActive" type="checkbox" />
                    <label class="form-check-label" asp-for="Input.IsActive">激活状态</label>
                </div>
            </div>
            
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.IsEmailConfirmed" type="checkbox" />
                    <label class="form-check-label" asp-for="Input.IsEmailConfirmed">邮箱已确认</label>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="保存更改" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">取消</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@functions{
    public class EditModel : Microsoft.AspNetCore.Mvc.RazorPages.PageModel
    {
        private readonly SSOAuthCenter.Services.Interfaces.IAuthService _authService;

        public EditModel(SSOAuthCenter.Services.Interfaces.IAuthService authService)
        {
            _authService = authService;
        }

        [BindProperty]
        public InputModel Input { get; set; } = new InputModel();

        public class InputModel
        {
            public int Id { get; set; }
            
            public string Username { get; set; } = string.Empty;
            
            public string Email { get; set; } = string.Empty;
            
            public string? FirstName { get; set; }
            
            public string? LastName { get; set; }
            
            public bool IsActive { get; set; }
            
            public bool IsEmailConfirmed { get; set; }
        }

        public async Task<IActionResult> OnGetAsync(int? id)
        {
            if (id == null)
            {
                return NotFound();
            }

            var user = await _authService.GetUserByIdAsync(id.Value);
            if (user == null)
            {
                return NotFound();
            }

            Input = new InputModel
            {
                Id = user.Id,
                Username = user.Username,
                Email = user.Email,
                FirstName = user.FirstName,
                LastName = user.LastName,
                IsActive = user.IsActive,
                IsEmailConfirmed = user.IsEmailConfirmed
            };

            return Page();
        }

        public async Task<IActionResult> OnPostAsync()
        {
            if (!ModelState.IsValid)
            {
                return Page();
            }

            var result = await _authService.UpdateUserAsync(Input.Id, Input.Email, Input.FirstName, Input.LastName, Input.IsActive, Input.IsEmailConfirmed);
            if (!result)
            {
                ModelState.AddModelError(string.Empty, "更新用户失败，可能邮箱已被其他用户使用");
                return Page();
            }

            return RedirectToPage("./Index");
        }
    }
}